<h1>A new post report is created</h1>
<h2>Creator</h2>
id: <%= @creator.id %>
Email: <%= @creator.email%>

<h2>Reported Post</h2>
id: <%= @post.id %>
Content: <%= @post.content %>

<h2>Post Creator</h2>
id: <%= @post.creator.id %>
Email: <%= @post.creator.email %>

<h2>Reason:</h2>
<%= @content %>

<% if @parent %>
  <h2>Parent Post</h2>
  id: <%= @parent.id %>
  Content: <%= @parent.content %>
<% end %>

<% if @root %>
  <h2>Root Post</h2>
  id: <%= @root.id %>
  Content: <%= @root.content %>
<% end %>
